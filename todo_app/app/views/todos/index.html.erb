<h1>Listing todos</h1>

<%= Time.now %>

<table>
  <thead>
    <tr>
      <th>Due</th>
      <th>だれ？</th>
      <th>Task</th>
      <th>めも</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.due %></td>
        <td><%= todo.user.name %></td>
        <td><%= todo.task %></td>
        <td><%= todo.memo %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @todos %>

<br>
<%= link_to('Todoを作成しる', new_todo_path()) %>

<%= link_to 'ろぐあうと', login_path(0), method: :delete %>
